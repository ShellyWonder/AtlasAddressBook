@model AtlasAddressBook.Models.Category

@{
    ViewData["Title"] = "Details";
}

<div class="row">

    <div class="col  m-4 d-flex justify-content-sm-start justify-content-md-center">
        <div class="glass-cf-style m-4 p-4">
            <h1 class=" mt-3 d-flex justify-content-sm-start justify-content-md-center">CATEGORY DETAILS</h1>
            <hr />
            <h3><strong>Name:</strong> @Model.Name</h3>
            <h3><strong>Owner:</strong> @Model.User!.FullName </h3>

            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |               
            <a asp-action="Index"> Back to List</a> 
        </div>
    </div>
</div>

