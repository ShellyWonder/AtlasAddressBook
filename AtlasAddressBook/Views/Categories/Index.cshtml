@model IEnumerable<AtlasAddressBook.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="mt-2 mb-3 glass-cf-style">
<h1 class=" mt-3 d-flex justify-content-sm-start justify-content-md-center">ALL CATEGORIES</h1>
   
    <a class="glass-button m-3" asp-controller="Categories" asp-action="Create">Create New</a>
</div>

    @foreach (var item in Model)
    {
        <div class="mb-3 glass-cf-style">
            <div class="row g-2">
                <div class="col">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => @item.Name) </h5>
                    <div class="card-text">Members: @Html.DisplayFor(modelItem => @item.User) </div>
                            
                </div>
            </div>
                <div class="mb-2 ms-2">
                    <a asp-action="Edit" asp-route-id="@item.Id" title="Edit"><i class="bi-pencil-fill" style="font-size: 1.5rem; color: greenyellow"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id" title="Details"><i class="bi-card-list" style="font-size: 1.5rem; color: white"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" title="Delete"><i class="bi-trash-fill" style="font-size: 1.5rem; color: red"></i></a> 
                </div>
            </div>
        </div>
    }


