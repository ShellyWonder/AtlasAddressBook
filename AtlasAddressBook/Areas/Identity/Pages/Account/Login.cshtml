@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="row">
    <div class="col-12">
        <h1 class=" mt-3 d-flex justify-content-sm-start justify-content-md-center">LOG IN</h1>
    </div>
    <div class="col-12  m-4 d-flex justify-content-sm-start justify-content-md-center">
        <section>
            <form class=" glass-cf-style p-4" id="account" method="post">
                <h2>Welcome</h2>
                    <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating ">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter Email" />
                    <label asp-for="Input.Email" class="form-label "></label>
                    <span asp-validation-for="Input.Email" class="text-light mt-1">Enter Email</span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control mt-3" autocomplete="current-password" aria-required="true" placeholder="Enter Password" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-light mt-1">Enter Password</span>
                </div>
                <div>
                    <div class="checkbox mt-2">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg glass-button">Log in</button>
                </div>
                <div>
                    <a class="w-100 btn btn-lg glass-button mt-2" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">New user?</a>
                </div>
            </form>
        </section>
    </div>

</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
