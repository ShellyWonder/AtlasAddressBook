@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-12">
        <h1 class=" mt-3 d-flex justify-content-sm-start justify-content-md-center">REGISTER NEW USER</h1>
        </div>
        <div class="col-12  m-4 d-flex justify-content-sm-start justify-content-md-center">
            <section>
                <form class=" glass-cf-style p-4" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2>Create a new account</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-light">First Name</div>
                    <div class="form-floating">
                        <input asp-for="Input.FirstName" class="form-control mt-2" autocomplete="on" aria-required="true" placeholder="First Name" />
                        <label asp-for="Input.FirstName"></label>
                        <span asp-validation-for="Input.FirstName" class="text-light">First Name</span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.LastName" class="form-control mt-2" autocomplete="on" aria-required="true" placeholder="Last Name" />
                        <label asp-for="Input.LastName"></label>
                        <span asp-validation-for="Input.LastName" class="text-light">Last Name</span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control mt-2" autocomplete="username" aria-required="true" placeholder="Email" />
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-light">Email</span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control mt-2" autocomplete="new-password" aria-required="true" placeholder="Password" />
                        <label asp-for="Input.Password"></label>
                        <span asp-validation-for="Input.Password" class="text-light">Password</span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.ConfirmPassword" class="form-control mt-2" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                        <label asp-for="Input.ConfirmPassword"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-light">Confirm Password</span>
                    </div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg glass-button mt-2">Register</button>
                </form>
            </section>
        </div>
    

</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
