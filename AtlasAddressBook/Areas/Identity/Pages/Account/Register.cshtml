@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutLanding.cshtml";
}

<div class="row glass-cf-style d-flex align-items-center me-2 ms-2 mt-5 p-5">
    <div class=" col-12 mt-5  col-lg-6 order-last order-lg-first text-center text-light">
        <section>
            <form class="glass-cf-style p-4" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2>@ViewData["Title"]</h2>
                <h1>CREATE A NEW ACCOUNT</h1>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.FirstName" class="form-control mt-3" autocomplete="firstname" aria-required="true" />
                    <label asp-for="Input.FirstName" class="form-label text-dark"></label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.LastName" class="form-control mt-3" autocomplete="lastname" aria-required="true" />
                    <label asp-for="Input.LastName" class="form-label text-dark"></label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control mt-3" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label text-dark"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control mt-3" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label text-dark"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control mt-3" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword" class="form-label text-dark"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg glass-button mt-3">Register</button>
            </form>
        </section>
    </div>
    <div class="col-12 col-lg-6 order-first order-lg-last d-flex justify-content-center">

        <img src="/img/black_book_pro_logo_510.png" alt="address book logo" class="img-fluid" data-tilt />
    </div>

</div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }


